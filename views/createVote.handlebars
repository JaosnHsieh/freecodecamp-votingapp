{{#if votes}}

                <h2>Your Votes </h2>
                <ul class="list-group">
    {{#each votes}}

                
              
                    <li class="list-group-item">
                        <i id="{{_id}}" class="fa fa-remove fa-2x pull-right" style="color: red; cursor:pointer;"></i>
                          <a href="/vote/{{_id}}"> {{name}} </a></li>
               
                
               
    {{/each}}
 </ul>
    

{{/if}}


<hr>




<form id="optionsForm" action="/createVote" method="POST">
    <h2> Add New Vote </h2>
    <fieldset class="form-group">
    <input name="voteName" type="text" class="form-control" id="voteName" placeholder="Voting Name" required>
  </fieldset>
  <fieldset class="form-group">
    <label >Option 1</label>
    <input name="nameOption1" type="text" class="form-control" id="inputOption1" placeholder="Option 1" required>
  </fieldset>
  <fieldset class="form-group">
    <label >Option 2</label>
    <input name="nameOption2" type="text" class="form-control" id="inputOption2" placeholder="Option 2" required>
  </fieldset>
<fieldset class="form-group row">
        <button class="btn btn-warning btn-block" type="button" id="addOneOptionBtn" onclick="addOneOption()">Add one more option</button>
    </fieldset>
     <!--<fieldset class="form-group row">
        <button class="btn btn-info btn-block" onclick="saveOptions()" id="saveOptionsBtn">Save</button>  
    </fieldset>-->
<fieldset class="form-group row">
        <input class="btn btn-info btn-block" type="submit" value="Save"></button>  
    </fieldset>
</form>


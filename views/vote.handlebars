      {{#if displayName}}

      {{#if voted}}
       <h1> You already voted  , Thanks </h1>
      {{else}}
        <form id="voteForm" action="/updateVote" method="POST">
          <strong> I'd like to vote for... </strong>
         
          {{#if optionData}}

							{{#each optionData}}

          <div class="col-xs-12 col-md-6">
           <div id="formRow" class="radio row"> 
              <label for="{{{htmlId}}}" style="font-size:2em; display:block;">
              <input  onchange="vote();" type="radio" name="radio" value="{{{htmlId}}}" id="{{{htmlId}}}" value="option1">
              {{{indexLabel}}}
            </label>
            </div>
          </div>

							
                {{/each}}
					{{/if}}

      

      </form>

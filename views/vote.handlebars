  {{else}}



  <div class="container">
    
    <div class="row">
      <div class="col-xs-9">
      </div>
      <div class="col-xs-3">

        <a href="https://twitter.com/intent/tweet" class="btn btn-social-icon btn-twitter">
    <span class="fa fa-twitter"></span>
  </a>
  <a href="https://plus.google.com/share" class="btn btn-social-icon btn-google">
    <span class="fa fa-google"></span>
  </a>
  <a href="http://www.facebook.com/sharer/sharer.php" class="btn btn-social-icon btn-facebook">
    <span class="fa fa-facebook"></span>
  </a>

      </div>
    </div>

    <div class="row">

      <div class="col-xs-12 col-md-6">    
        <div id="chartContainer" style="height: 400px; width: 100%;"></div>
